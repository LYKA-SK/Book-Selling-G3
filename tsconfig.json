{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "ignoreDeprecations": "5.0",
    "paths": { "*": ["node_modules/*"] },
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "types": ["node", "express"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
